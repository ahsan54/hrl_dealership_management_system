<odoo>
    <template id="portal_sales_warranty_portal" name="Portal My Home : Sales Warranty Portal"
              inherit_id="portal.portal_my_home">
        <xpath expr="//div[contains(@class, 'o_portal_docs')]" position="inside">
            <div class="o_portal_docs">
                <div class="box" style="cursor: pointer; width: 420px; height: 100px;
            background-color: #d7f1ff; color: black; border-radius: 8px; padding: 10px;">
                    <a t-att-href="'/warranty/check'" style="display: block; text-decoration: none; color: black;">
                        <div class="o_portal_doc">
                            <h4 style="color: #4a3f41; font-family: 'Playfair Display', serif; font-weight: 700; display: flex; align-items: center;">
                                Dealer Warranties
                                <img src="/DMS_Portal/static/src/img/In_icon.png" alt="Check-in Icon"
                                     style="width: 40px; height: 40px; margin-left: 35px;"/>
                            </h4>

                            <t t-set="count"
                               t-value="request.env['sales.warranty'].sudo().search_count([('state','=','in_warranty')])"/>

                            <p style="font-family: 'Playfair Display', serif; font-size: 14px; color: #333;">
                                <span style="font-weight: 500; color: #6c5b5f; text-align: center;">Total Warranties

                                </span><br/>
                                <span><strong style="font-size: 15px; font-weight: 700; color: #5a2d31;"><t
                                        t-esc="count"/></strong></span>
                            </p>
                        </div>
                    </a>
                </div>
            </div>
        </xpath>
    </template>

    <template id="WarrantyCheckTemplate" name="Warranty Check">
        <t t-call="website.layout">
            <div class="oe_structure">
                <div class="warranty-portal-container">
                    <div class="warranty-header">
                        <h1 class="warranty-title">Check Warranty Status</h1>
                        <div class="warranty-glow"></div>
                    </div>
                    <div class="warranty-form">
                        <form method="GET" action="/warranty/check">
                            <t t-if="request.csrf_token">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token"/>
                            </t>
                            <div class="form-group">
                                <label for="warranty_id" class="form-label">Enter Warranty ID:</label>
                                <input type="text" name="warranty_id" id="warranty_id" class="form-control"
                                       t-att-value="warranty_id" placeholder="e.g., WARRANTY-001" required="required"/>
                            </div>
                            <button type="submit" class="btn btn-primary check-btn">Check Warranty</button>
                        </form>
                    </div>

                    <t t-if="data">
                        <t t-foreach="data" t-as="warranty">
                            <div class="warranty-card mt-4">
                                <div class="card-header">
                                    <h2 class="card-title">Warranty Details</h2>
                                </div>
                                <div class="card-content">
                                    <div class="warranty-info">
                                        <div class="info-item">
                                            <span class="info-label">Warranty ID:</span>
                                            <span class="info-value" t-esc="warranty['name']"/>
                                        </div>
                                        <div class="info-item">
                                            <span class="info-label">Status:</span>
                                            <span t-if="warranty['status'] == 'active'" class="info-value status-active">Active</span>
                                            <span t-elif="warranty['status'] == 'in_warranty'" class="info-value status-active">Active</span>
                                            <span t-elif="warranty['status'] == 'expired'" class="info-value status-expired">Expired</span>
                                            <span t-else="" class="info-value" t-esc="warranty['status']"/>
                                        </div>
                                        <div class="info-item">
                                            <span class="info-label">Date of Purchase:</span>
                                            <span class="info-value" t-esc="warranty['date_of_purchase']"/>
                                        </div>
                                        <div class="info-item">
                                            <span class="info-label">Warranty End Date:</span>
                                            <span class="info-value" t-esc="warranty['warranty_end_date']"/>
                                        </div>
                                        <div class="info-item">
                                            <span class="info-label">Remaining Months:</span>
                                            <span class="info-value" t-esc="warranty['remaining_months']"/>
                                        </div>
                                    </div>
                                    <div class="warranty-visual">
                                        <div class="progress-circle"
                                             t-att-data-progress="warranty['remaining_value']">
                                            <svg width="150" height="150">
                                                <circle cx="75" cy="75" r="60" class="progress-bg"></circle>
                                                <circle cx="75" cy="75" r="60" class="progress-bar"></circle>
                                            </svg>
                                            <div class="progress-text">
                                                <span t-esc="warranty['remaining_value']"/>%
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </t>
                </div>
            </div>

            <style>
                .warranty-portal-container {
                    background: linear-gradient(135deg, #1a1a2e, #16213e);
                    min-height: 80vh;
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    justify-content: flex-start;
                    padding: 50px 20px;
                    color: #fff;
                    font-family: 'Arial', sans-serif;
                }

                .warranty-header {
                    position: relative;
                    text-align: center;
                    margin-bottom: 40px;
                }

                .warranty-title {
                    font-size: 2.8em;
                    font-weight: 700;
                    text-transform: uppercase;
                    letter-spacing: 2px;
                    color: #00d4ff;
                    text-shadow: 0 0 10px rgba(0, 212, 255, 0.7), 0 0 20px rgba(0, 212, 255, 0.5);
                    margin-bottom: 10px;
                }

                .warranty-glow {
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    width: 300px;
                    height: 300px;
                    background: radial-gradient(circle, rgba(0, 212, 255, 0.3) 0%, transparent 70%);
                    transform: translate(-50%, -50%);
                    z-index: -1;
                    animation: glow 3s infinite alternate;
                }

                @keyframes glow {
                    from {
                        opacity: 0.5;
                        width: 250px;
                        height: 250px;
                    }
                    to {
                        opacity: 1;
                        width: 300px;
                        height: 300px;
                    }
                }

                .warranty-form {
                    background: rgba(255, 255, 255, 0.1);
                    padding: 30px;
                    border-radius: 15px;
                    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
                    backdrop-filter: blur(10px);
                    width: 100%;
                    max-width: 500px;
                    margin-bottom: 30px;
                }

                .form-label {
                    color: #00d4ff;
                    font-weight: 600;
                    font-size: 1.2em;
                    margin-bottom: 10px;
                    display: block;
                }

                .form-control {
                    background: rgba(255, 255, 255, 0.1);
                    border: 1px solid rgba(0, 212, 255, 0.3);
                    color: #fff;
                    padding: 12px 15px;
                    border-radius: 8px;
                    margin-bottom: 20px;
                    font-size: 1.1em;
                    transition: all 0.3s ease;
                }

                .form-control:focus {
                    border-color: #00d4ff;
                    box-shadow: 0 0 0 2px rgba(0, 212, 255, 0.3);
                    outline: none;
                }

                .form-control::placeholder {
                    color: rgba(255, 255, 255, 0.5);
                }

                .check-btn {
                    background: linear-gradient(45deg, #00d4ff, #05a3ff);
                    border: none;
                    color: #fff;
                    padding: 12px 25px;
                    border-radius: 8px;
                    font-size: 1.1em;
                    font-weight: 600;
                    cursor: pointer;
                    transition: all 0.3s ease;
                    box-shadow: 0 4px 15px rgba(0, 212, 255, 0.4);
                    width: 100%;
                }

                .check-btn:hover {
                    background: linear-gradient(45deg, #05a3ff, #00d4ff);
                    transform: translateY(-2px);
                    box-shadow: 0 6px 20px rgba(0, 212, 255, 0.5);
                }

                .warranty-card {
                    background: rgba(255, 255, 255, 0.1);
                    border-radius: 20px;
                    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
                    width: 100%;
                    max-width: 600px;
                    backdrop-filter: blur(10px);
                    overflow: hidden;
                    border: 1px solid rgba(0, 212, 255, 0.2);
                }

                .card-header {
                    background: rgba(0, 212, 255, 0.2);
                    padding: 15px 30px;
                    border-bottom: 1px solid rgba(0, 212, 255, 0.3);
                }

                .card-title {
                    color: #00d4ff;
                    margin: 0;
                    font-size: 1.8em;
                    font-weight: 600;
                    text-align: center;
                }

                .card-content {
                    padding: 30px;
                    display: flex;
                    flex-direction: row;
                    justify-content: space-between;
                    align-items: center;
                    flex-wrap: wrap;
                }

                .warranty-info {
                    flex: 1;
                    margin-right: 20px;
                    min-width: 250px;
                }

                .info-item {
                    display: flex;
                    justify-content: space-between;
                    margin-bottom: 18px;
                    font-size: 1.1em;
                    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
                    padding-bottom: 10px;
                }

                .info-item:last-child {
                    border-bottom: none;
                    margin-bottom: 0;
                }

                .info-label {
                    color: #00d4ff;
                    font-weight: 600;
                }

                .info-value {
                    color: #fff;
                    font-weight: 500;
                }

                .status-active {
                    color: #00ff88;
                    font-weight: 700;
                }

                .status-expired {
                    color: #ff5555;
                    font-weight: 700;
                }

                .warranty-visual {
                    flex: 0 0 auto;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    padding: 10px;
                }

                .progress-circle {
                    position: relative;
                    width: 150px;
                    height: 150px;
                }

                .progress-circle svg {
                    transform: rotate(-90deg);
                }

                .progress-bg {
                    fill: none;
                    stroke: rgba(255, 255, 255, 0.1);
                    stroke-width: 12;
                }

                .progress-bar {
                    fill: none;
                    stroke: #00d4ff;
                    stroke-width: 12;
                    stroke-linecap: round;
                    stroke-dasharray: 377;
                    stroke-dashoffset: 377; /* Will be updated by JS */
                    transition: stroke-dashoffset 2s ease-out;
                    filter: drop-shadow(0 0 5px rgba(0, 212, 255, 0.7));
                }

                .progress-text {
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                    font-size: 2em;
                    font-weight: 700;
                    color: #00d4ff;
                    text-shadow: 0 0 10px rgba(0, 212, 255, 0.5);
                }

                @media (max-width: 768px) {
                    .card-content {
                        flex-direction: column;
                    }

                    .warranty-info {
                        margin-right: 0;
                        margin-bottom: 30px;
                        width: 100%;
                    }

                    .warranty-title {
                        font-size: 2.2em;
                    }

                    .card-title {
                        font-size: 1.5em;
                    }

                    .info-item {
                        font-size: 1em;
                    }
                }
            </style>
            <script>
                document.addEventListener('DOMContentLoaded', function() {
                    const circles = document.querySelectorAll('.progress-circle');
                    circles.forEach(circle => {
                        const progressElement = circle.querySelector('.progress-bar');
                        const radius = progressElement.getAttribute('r');
                        const circumference = 2 * Math.PI * radius;

                        // Set the initial dasharray to the circumference
                        progressElement.style.strokeDasharray = circumference;

                        // Get the progress value from the data attribute
                        const progress = parseInt(circle.dataset.progress) || 0;

                        // Calculate the dashoffset based on the progress
                        const dashoffset = circumference - (progress / 100) * circumference;

                        // Apply the dashoffset with a slight delay for animation effect
                        setTimeout(() => {
                            progressElement.style.strokeDashoffset = dashoffset;
                        }, 300);
                    });
                });
            </script>
        </t>
    </template>

</odoo>