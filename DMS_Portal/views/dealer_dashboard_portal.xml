<odoo>
    <template id="dashboard_controller_dms_id" name="Portal My Home : DashBoard View"
              inherit_id="portal.portal_my_home">
        <xpath expr="//div[contains(@class, 'o_portal_docs')]" position="inside">
            <div class="o_portal_docs">
                <div class="box"
                     style="cursor: pointer; width: 420px; height: 110px;
                background: linear-gradient(135deg, #1C1C1C, #292929); /* Elegant Dark Gradient */
                color: #F0A500; /* Luxurious Gold Text */
                border-radius: 12px;
                padding: 15px;
                box-shadow: 0px 4px 15px rgba(240, 165, 0, 0.5); /* Golden Glow */
                transition: all 0.3s ease-in-out;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                text-align: center;
                position: relative;
                overflow: hidden;">

                    <!-- Dashboard Icon (Positioned at Top-Right) -->
                    <img src="/DMS_Portal/static/src/img/dashboard_new.png"
                         alt="Dashboard Icon"
                         style="width: 45px; height: 50px;
                            position: absolute;
                            top: 10px; right: 15px;"/>

                    <!-- Clickable Link -->
                    <a t-att-href="'/dealer/dashboard'"
                       style="display: block; text-decoration: none; color: inherit; width: 100%;">

                        <div class="o_portal_doc">
                            <!-- Title (Centered) -->
                            <h4 style="font-family: 'Playfair Display', serif;
                                   font-weight: 700;
                                   font-size: 22px;
                                   margin-bottom: 20px;
                                   letter-spacing: 1px;
                                   color: #F0A500;">
                                DashBoard
                            </h4>

                            <!-- Subtitle (Centered, Two Lines Below) -->
                            <p style="font-family: 'Playfair Display', serif;
                                  font-size: 14px;
                                  color: #D9D9D9;
                                  font-weight: 500;
                                  text-align: center;
                                  margin-top: -10px;">
                                Admin View <span style="font-size: 20px;">ü¶Ö</span>
                            </p>
                        </div>
                    </a>
                </div>
            </div>
        </xpath>
    </template>

    <template id="dealer_ship_admin_dashboard" name="Dealer Admin Dashboard">
        <t t-call="website.layout">
            <t t-set="title">Dealer Dashboard</t>

            <script>
                document.addEventListener("DOMContentLoaded", function() {
                let months = [
                "Select Month", "January", "February", "March", "April", "May", "June",
                "July", "August", "September", "October", "November", "December"
                ];
                let currentDate = new Date();
                let currentMonth = 0; // Start with "Select Month"
                let currentYear = currentDate.getFullYear();

                function getFirstDayOfMonth(year, month) {
                if (month === 0) return "";
                return `${year}-${String(month).padStart(2, '0')}-01`;
                }

                function updateDashboardTitle() {
                document.getElementById("dashboard-title").innerText = `${months[currentMonth]}
                ${currentMonth === 0 ? '' : currentYear}`;
                document.getElementById("selected-month-hidden").value = getFirstDayOfMonth(currentYear, currentMonth);
                }

                function changeMonth(step) {
                currentMonth += step;
                if (currentMonth
                &lt;
                0) {
                currentMonth = 12;
                currentYear -= 1;
                } else if (currentMonth > 12) {
                currentMonth = 0;
                currentYear += 1;
                }
                document.getElementById("month-dropdown").value = months[currentMonth];
                updateDashboardTitle();
                }

                document.getElementById("prev-month").addEventListener("click", function() {
                changeMonth(-1);
                });

                document.getElementById("next-month").addEventListener("click", function() {
                changeMonth(1);
                });

                document.getElementById("today-btn").addEventListener("click", function() {
                currentMonth = new Date().getMonth() + 1;
                currentYear = new Date().getFullYear();
                document.getElementById("month-dropdown").value = months[currentMonth];
                updateDashboardTitle();
                });

                document.getElementById("month-dropdown").addEventListener("change", function() {
                currentMonth = months.indexOf(this.value);
                updateDashboardTitle();
                });

                document.getElementById("dealer-applications").addEventListener("click", function() {
                if (currentMonth === 0) {
                alert("Please select a month first!");
                } else {
                document.getElementById("request-type-hidden").value = "dealer_applications";
                document.getElementById("view-bookings-form").submit();
                }
                });

                document.getElementById("approved-applications").addEventListener("click", function() {
                if (currentMonth === 0) {
                alert("Please select a month first!");
                } else {
                document.getElementById("request-type-hidden").value = "approve_applications";
                document.getElementById("view-bookings-form").submit();
                }
                });

                document.getElementById("pending-approvals").addEventListener("click", function() {
                if (currentMonth === 0) {
                alert("Please select a month first!");
                } else {
                document.getElementById("request-type-hidden").value = "waiting_applications";
                document.getElementById("view-bookings-form").submit();
                }
                });

                document.getElementById("all-dealers").addEventListener("click", function() {
                document.getElementById("request-type-hidden").value = "all_dealer_applications";
                document.getElementById("view-bookings-form").submit();
                });

                updateDashboardTitle();
                });
            </script>

            <style>
                .dashboard-container {
                    display: flex;
                    flex-direction: column;
                    align-items: flex-start; /* Fully left-aligned */
                    padding: 15px;
                }

                @import url('https://fonts.googleapis.com/css2?family=Fredoka+One&amp;display=swap');

                .dashboard-title {
                    font-family: 'Fredoka One', cursive;
                    font-size: 100px; /* Large, eye-catching size */
                    font-weight: 1900; /* keep as it is */
                    margin: 0 0 0px;
                    letter-spacing: 1px;
                    display: inline-block;
                }

                /* Style for each span (character) */
                .dashboard-title span {
                    /* Gradient per character: purple to teal, with sky colors */
                    background: linear-gradient(to right, #6F428E 25%, #3EA9A9 50%, #87CEEB 75%, #E0FFFF 100%);
                    -webkit-background-clip: text;
                    background-clip: text;
                    color: transparent;
                    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3);
                    transition: background 0.3s ease, transform 0.3s ease, text-shadow 0.3s ease;
                    display: inline-block; /* Allows transformations to work properly */
                }

                /* Hover effect for each character */
                .dashboard-title span:hover {
                    /* Reverse gradient direction on hover */
                    background: linear-gradient(to right, #70d4ff 50%, #70d4ff 100%);
                    -webkit-background-clip: text;
                    background-clip: text;
                    color: transparent;
                    transform: scale(1.2) translateY(-5px); /* Slightly larger zoom per character */
                    text-shadow: 0px 0px 0px rgba(0, 0, 0, 0.4); /* Stronger shadow */
                }

                .dashboard-header {
                    display: flex;
                    align-items: center;
                    gap: 15px; /* Increased gap for better spacing */
                    padding: 20px 25px; /* Increased padding for a softer look */
                    background: #6F428E; /* Main purple background, unchanged for consistency */
                    border-radius: 15px; /* Increased border-radius for a softer, rounded look */
                    color: #FFFFFF; /* Bright white for maximum contrast against dark background */
                    font-weight: bold;
                    width: 100%; /* Full width for header */
                    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2); /* Subtle shadow for depth */
                    transition: all 0.3s ease; /* Smooth transition for hover effects */
                }

                .dashboard-header h2 {
                    margin: 0;
                    font-size: 24px; /* Slightly larger for better readability */
                    color: #FFFFFF; /* Ensure month/year text contrasts with background */
                }

                .date-navigation {
                    display: flex;
                    align-items: center;
                    gap: 10px;
                }

                .date-navigation button {
                    background: transparent; /* No background for arrows and Today, just borders */
                    color: #FFFFFF; /* White text for contrast */
                    border: 2px solid #9ed7ff; /* Thicker border for emphasis, matching month-dropdown */
                    padding: 10px 15px; /* Increased padding for a softer look */
                    font-size: 14px;
                    border-radius: 10px; /* Increased border-radius for rounded corners */
                    cursor: pointer;
                    transition: border-color 0.3s ease, background-color 0.3s ease, color 0.3s ease; /* Smooth transitions */
                }

                .date-navigation button:hover {
                    border-color: #5a3575; /* Darker purple for hover, matching other elements */
                    background-color: rgba(255, 255, 255, 0.1); /* Subtle white overlay on hover for contrast */
                    color: #FFFFFF; /* Maintain white text on hover */
                }

                #today-btn {
                    background: linear-gradient(to right, #6F428E, #3EA9A9); /* Gradient for Today button, matching month-dropdown */
                    color: #000000; /* Black text for readability against gradient */
                    border: 2px solid #9ed7ff; /* Consistent border */
                }

                #today-btn:hover {
                    background: linear-gradient(to right, #5a3575, #2e8b8b); /* Darker gradient on hover for consistency */
                    border-color: #5a3575; /* Match hover border color */
                    color: #FFFFFF; /* White text on hover for contrast */
                }

                .month-dropdown {
                    background: linear-gradient(to right, #6F428E, #3EA9A9); /* Gradient background, matching Today button */
                    color: #000000; /* Black text for readability */
                    border: 2px solid #3EA9A9; /* Thicker border for consistency */
                    padding: 10px 15px; /* Increased padding for a softer look */
                    border-radius: 10px; /* Increased border-radius for rounded corners */
                    cursor: pointer;
                    transition: border-color 0.3s ease, background 0.3s ease, color 0.3s ease; /* Smooth transitions */
                    -webkit-appearance: none;
                    -moz-appearance: none;
                    appearance: none;
                }

                .month-dropdown:hover {
                    background: #3EA9A9; /* Same as the dropdown */
                    color: black; /* White text */
                    border-color: #5a3575; /* Match hover border color */
                }

                .dashboard-cards {
                    display: flex;
                    justify-content: center;
                    gap: 20px;
                    margin-top: 20px;
                }

                .dashboard-card {
                    width: 265px; /* Match Check-in Requests width */
                    height: 75px; /* Match Check-in Requests height */
                    background: linear-gradient(to right, #6F428E, #3EA9A9);
                    padding: 20px;
                    border-radius: 10px;
                    color: white;
                    font-weight: bold;
                    display: flex;
                    align-items: center;
                    gap: 10px;
                    cursor: pointer;
                    transition: transform 0.3s ease-in-out;
                }

                .dashboard-card:hover {
                    transform: scale(1.05);
                }

                .badge {
                    background: orange;
                    color: black;
                    padding: 4px 8px;
                    border-radius: 50%;
                    font-size: 14px;
                    font-weight: bold;
                }

                .booking-container {
                    margin-top: 30px;
                }

                .room-container {
                    display: grid;
                    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
                    gap: 15px;
                    padding: 20px;
                }

                .room-box {
                    position: relative;
                    height: 200px;
                    background: #f0f8ff;
                    padding: 15px;
                    border-radius: 12px;
                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
                    text-align: center;
                    overflow: hidden;
                    transition: transform 0.3s ease-in-out;
                    background: transparent;
                }

                .room-box:hover {
                    transform: translateY(-10px) scale(1.05);
                    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
                }

                .room-notch {
                    position: absolute;
                    top: 0;
                    left: 50%;
                    transform: translateX(-50%);
                    width: 130px;
                    height: 32.5px;
                    background: black;
                    border-radius: 0 0 12px 12px;
                    color: white;
                    font-size: 16px;
                    font-weight: bold;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
                    z-index: 10;
                }

                .room-number {
                    font-size: 22px;
                    font-weight: bold;
                    margin-top: 30px;
                    color: white;
                    font-family: 'Playfair Display', serif;
                }

                .room-details {
                    margin-top: 10px;
                    padding: 10px;
                    border-radius: 8px;
                    background: #d0eaff;
                    backdrop-filter: blur(8px);
                }

                .room-details p {
                    font-size: 14px;
                    margin: 5px 0;
                    font-family: 'Poppins', sans-serif;
                }

                .no-results {
                    margin-top: 20px;
                    font-style: italic;
                    color: #777;
                }

                @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&amp;family=Playfair+Display:wght@600&amp;family=Roboto:wght@400&amp;display=swap');

                body {
                    font-family: 'Roboto', sans-serif;
                    background: linear-gradient(to right, #ebf6ff, #dff0ff);
                }
            </style>

            <div class="container mt-4">
                <form id="view-bookings-form" action="/dealer/dashboard" method="get" style="display: none;">
                    <input type="text" id="selected-month-hidden" name="require_month"/>
                    <input type="text" id="request-type-hidden" name="request_type"/>
                </form>

                <div class="dashboard-container">
                    <p class="dashboard-title">
                        <span>d</span><span>a</span><span>s</span><span>h</span><span>b</span><span>o</span><span>
                        a</span><span>r</span><span>d</span>
                    </p>
                    <div class="dashboard-header">
                        <h2 id="dashboard-title"></h2>
                        <div class="date-navigation">
                            <button id="prev-month">‚Üê</button>
                            <button id="today-btn">Current Month</button>
                            <button id="next-month">‚Üí</button>
                            <select id="month-dropdown" class="month-dropdown">
                                <t t-foreach="['Select Month', 'January','February','March','April','May','June','July','August','September','October','November','December']"
                                   t-as="month">
                                    <option t-att-value="month" t-esc="month"/>
                                </t>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="dashboard-cards">
                    <div class="dashboard-card" id="dealer-applications">
                        <span>üìù Dealership Applications</span>
                        <span class="badge"
                              t-esc="len(dealership_applications) if dealership_applications else '0'"></span>
                    </div>
                    <div class="dashboard-card" id="approved-applications">
                        <span>‚úÖ Approved Applications</span>
                        <span class="badge" t-esc="len(approved_applications) if approved_applications else '0'"></span>
                    </div>
                    <div class="dashboard-card" id="pending-approvals">
                        <span>‚è≥ Pending Approvals</span>
                        <span class="badge" t-esc="len(pending_applications) if pending_applications else '0'"></span>
                    </div>
                    <div class="dashboard-card" id="all-dealers">
                        <span>üè¢ All Registered Dealers</span>
                        <span class="badge" t-esc="len(all_dealers) if all_dealers else '0'"></span>
                    </div>
                </div>

                <div class="booking-container">
                    <!-- Dealership Applications -->
                    <t t-if="request_type == 'dealer_applications'">
                        <h3>Dealership Applications <t t-if="selected_month">of <t t-esc="selected_month"/></t></h3>
                        <div class="room-container">
                            <t t-if="dealership_applications and len(dealership_applications) > 0">
                                <t t-foreach="dealership_applications" t-as="app">
                                    <div class="room-box"
                                         t-att-style="'background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(0,0,0,0.4)), url(' + (app['Image'] and 'data:image/png;base64,' + app['Image'] or '/DMS_Portal/static/src/img/default_dealer.jpg') + ') no-repeat center center; background-size: cover;'">
                                        <div class="room-notch">
                                            <t t-esc="app['Applicant_Name']"/>
                                        </div>
                                        <h3 class="room-number">
                                            <t t-esc="app['Application_ID']"/>
                                        </h3>
                                        <div class="room-details">
                                            <p>Country: <t t-esc="app['Country']"/></p>
                                            <p>Company: <t t-esc="app['company_name']"/></p>
                                            <p>Business Type: <t t-esc="app['business_type']"/></p>
                                        </div>
                                    </div>
                                </t>

                            </t>
                        </div>
                    </t>

                    <!-- Approved Applications -->
                    <t t-if="request_type == 'approve_applications'">
                        <h3>Approved Applications <t t-if="selected_month">of <t t-esc="selected_month"/></t></h3>
                        <div class="room-container">
                            <t t-if="approved_applications and len(approved_applications) > 0">
                                <t t-foreach="approved_applications" t-as="app">
                                    <div class="room-box"
                                         t-att-style="'background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(0,0,0,0.4)), url(' + (app['Image'] and 'data:image/png;base64,' + app['Image'] or '/DMS_Portal/static/src/img/default_dealer.jpg') + ') no-repeat center center; background-size: cover;'">
                                        <div class="room-notch">
                                            <t t-esc="app['Applicant_Name']"/>
                                        </div>
                                        <h3 class="room-number">
                                            <t t-esc="app['Application_ID']"/>
                                        </h3>
                                        <div class="room-details">
                                            <p>Country: <t t-esc="app['Country']"/></p>
                                            <p>Company: <t t-esc="app['company_name']"/></p>
                                            <p>Business Type: <t t-esc="app['business_type']"/></p>
                                        </div>
                                    </div>
                                </t>

                            </t>
                        </div>
                    </t>

                    <!-- Pending Approvals -->
                    <t t-if="request_type == 'waiting_applications'">
                        <h3>Pending Applications <t t-if="selected_month">of <t t-esc="selected_month"/></t></h3>
                        <div class="room-container">
                            <t t-if="pending_applications and len(pending_applications) > 0">
                                <t t-foreach="pending_applications" t-as="app">
                                    <div class="room-box"
                                         t-att-style="'background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(0,0,0,0.4)), url(' + (app['Image'] and 'data:image/png;base64,' + app['Image'] or '/DMS_Portal/static/src/img/default_dealer.jpg') + ') no-repeat center center; background-size: cover;'">
                                        <div class="room-notch">
                                            <t t-esc="app['Applicant_Name']"/>
                                        </div>
                                        <h3 class="room-number">
                                            <t t-esc="app['Application_ID']"/>
                                        </h3>
                                        <div class="room-details">
                                            <p>Country: <t t-esc="app['Country']"/></p>
                                            <p>Company: <t t-esc="app['company_name']"/></p>
                                            <p>Business Type: <t t-esc="app['business_type']"/></p>
                                        </div>
                                    </div>
                                </t>

                            </t>
                        </div>
                    </t>

                    <!-- All Registered Dealers -->
                    <t t-if="request_type == 'all_dealer_applications'">
                        <h3>All Registered Dealers</h3>
                        <div class="room-container">
                            <t t-if="all_dealers and len(all_dealers) > 0">
                                <t t-foreach="all_dealers" t-as="dealer">
                                    <div class="room-box"
                                         t-att-style="'background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(0,0,0,0.4)), url(' + (dealer['Image'] and 'data:image/png;base64,' + dealer['Image'] or '/DMS_Portal/static/src/img/default_dealer.jpg') + ') no-repeat center center; background-size: cover;'">
                                        <div class="room-notch">
                                            <t t-esc="dealer['Applicant_Name']"/>
                                        </div>
                                        <h3 class="room-number">
                                            <t t-esc="dealer['Application_ID']"/>
                                        </h3>
                                        <div class="room-details">
                                            <p>Country: <t t-esc="dealer['Country']"/></p>
                                            <p>Company: <t t-esc="dealer['company_name']"/></p>
                                            <p>Business Type: <t t-esc="dealer['business_type']"/></p>
                                        </div>
                                    </div>
                                </t>

                            </t>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>